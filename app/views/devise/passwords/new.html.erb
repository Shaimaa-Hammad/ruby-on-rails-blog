<div class="form-container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'box' }) do |f| %>
    <h5 class="is-size-4">نسيت كلمة المرور؟</h5>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, 'البريد الإلكتروني', class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>
    <div class="actions">
      <%= f.submit "أرسل لي تعليمات تغيير كلمة المرور", class: 'button is-primary is-fullwidth' %>
    </div>
    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>