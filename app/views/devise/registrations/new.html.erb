<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'box'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h5 class="is-size-4">تسجيل حساب جديد</h5>
    <div class="field">
      <%= f.label :username, 'اسم المستخدم', class: 'label' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :email, 'البريد الإلكتروني', class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :password, 'كلمة المرور', class: 'label' %>
      <%
=begin%>
 <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> محارف على الاقل)</em>
      <% end %> 
<%
=end%>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'تأكيد كلمة المرور', class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>
    <div class="actions">
      <%= f.submit "تسجيل حساب جديد", class: 'button is-primary is-fullwidth' %>
    </div>
    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>