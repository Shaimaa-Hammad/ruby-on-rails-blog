<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'box' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h5 class="is-size-4"> تعديل حسابي </h5>
    <div class="field">
      <%= f.label :username, 'اسم المستخدم', class: 'label' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :email, 'البريد الإلكتروني', class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :password, 'كلمة المرور' %> <i>(اتركه فارغًا إذا لم ترد تغييره)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
      <%
=begin%>
 <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> محارف على الاقل)</em>
      <% end %> 
<%
=end%>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'تأكيد كلمة المرور', class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :current_password, 'كلمة المرور الحالية', class: 'label' %> <i>(تحتاج إلى إدخال كلمة المرور القديمة حتى تستطيع الحصول على جديدة)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
    </div>
    <div class="actions">
      <%= f.submit "تعديل", class: 'button is-primary is-fullwidth' %>
    </div>
  <% end %>
</div>